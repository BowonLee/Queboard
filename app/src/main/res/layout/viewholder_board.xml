<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewholder_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/drawable_sample" />

            <TextView
                android:id="@+id/viewholder_text_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lv. 3"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewholder_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp"
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/viewholder_check_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null"
                android:background="@drawable/selector_checkbox_favorite"
                android:checked="false" />

            <Button
                android:id="@+id/viewholder_btn_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/drawable_image_share_48dp"
                />

            <Button
                android:id="@+id/viewholder_btn_more"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/drawable_image_more_vert_black_48dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewholder_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#tag1 #tag1 #tag1 #tag1 #tag1 #tag1 #tag1 #tag1"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>