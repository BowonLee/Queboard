<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QueBoardCreateActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/QueBoardCreateActivity_textView_setDateTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="기간설정"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/QueBoardCreateActivity_textView_startQueLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="퀘스트 시작 날짜"/>

        <Button
            android:id="@+id/QueBoardCreateActivity_button_startDate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:text="시작 날짜" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/QueBoardCreateActivity_textView_dueDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀘스트 마감 날짜" />

        <Button
            android:text="마감 날짜"
            android:id="@+id/QueBoardCreateActivity_button_dueDate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/QueBoardCreateActivity_textView_finishQueDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀘스트 완료 날짜" />

        <Button
            android:id="@+id/QueBoardCreateActivity_button_finishQueDate"
            android:text="완료 날짜"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:text="모임 인원 수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <EditText
                android:id="@+id/QueBoardCreateActivity_editText_numberOfPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    <Switch
        android:layout_marginTop="20dp"
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="온/오프라인 설정" />

    <TextView
        android:layout_marginTop="20dp"
        android:text="퀘스트 세부내용"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|bottom">
        <Button
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>